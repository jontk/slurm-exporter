{
  "dashboard": {
    "id": null,
    "title": "SLURM Exporter - Security Dashboard",
    "tags": ["slurm-exporter", "security", "monitoring"],
    "style": "dark",
    "timezone": "UTC",
    "refresh": "30s",
    "schemaVersion": 36,
    "version": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(slurm_exporter_build_info, cluster)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "instance",
          "type": "query", 
          "query": "label_values(slurm_exporter_build_info{cluster=~\"$cluster\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "ðŸ”’ Security Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(up{job=\"slurm-exporter\",cluster=~\"$cluster\",instance=~\"$instance\"} == 1)",
            "legendFormat": "Active Exporters"
          },
          {
            "expr": "sum(rate(slurm_exporter_security_events_total{cluster=~\"$cluster\",instance=~\"$instance\"}[5m]))",
            "legendFormat": "Security Events/sec"
          },
          {
            "expr": "sum(slurm_exporter_auth_failures_total{cluster=~\"$cluster\",instance=~\"$instance\"})",
            "legendFormat": "Auth Failures (24h)"
          },
          {
            "expr": "sum(slurm_exporter_circuit_breaker_state{cluster=~\"$cluster\",instance=~\"$instance\"} == 2)",
            "legendFormat": "Open Circuit Breakers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "horizontal"
        }
      },
      {
        "id": 2,
        "title": "ðŸš¨ Security Events Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(slurm_exporter_security_events_total{cluster=~\"$cluster\",instance=~\"$instance\"}[5m])",
            "legendFormat": "{{type}} - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"}
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "desc"},
          "legend": {"displayMode": "table", "placement": "bottom", "values": ["max", "mean"]}
        }
      },
      {
        "id": 3,
        "title": "ðŸ” Authentication Status",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(slurm_exporter_auth_requests_total{cluster=~\"$cluster\",instance=~\"$instance\"}[5m])",
            "legendFormat": "{{status}} - {{method}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "stacking": {"mode": "none"}
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 0.1}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": "success"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
            },
            {
              "matcher": {"id": "byRegexp", "options": "failure"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "ðŸ›¡ï¸ Circuit Breaker Status",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "slurm_exporter_circuit_breaker_state{cluster=~\"$cluster\",instance=~\"$instance\"}",
            "legendFormat": "{{endpoint}} - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "Closed", "color": "green"}}, "type": "value"},
              {"options": {"1": {"text": "Half-Open", "color": "yellow"}}, "type": "value"},
              {"options": {"2": {"text": "Open", "color": "red"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 2}
              ]
            },
            "unit": "short",
            "min": 0,
            "max": 2
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "lcd",
          "showUnfilled": true
        }
      },
      {
        "id": 5,
        "title": "ðŸ“Š TLS Certificate Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "(slurm_exporter_tls_cert_expiry_timestamp{cluster=~\"$cluster\",instance=~\"$instance\"} - time()) / 86400",
            "legendFormat": "{{instance}} - Days to Expiry"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "days",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 7},
                {"color": "green", "value": 30}
              ]
            },
            "custom": {
              "displayMode": "basic"
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 6,
        "title": "ðŸŒ Connection Security",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "rate(slurm_exporter_tls_handshake_errors_total{cluster=~\"$cluster\",instance=~\"$instance\"}[5m])",
            "legendFormat": "TLS Errors - {{instance}}"
          },
          {
            "expr": "rate(slurm_exporter_connection_errors_total{cluster=~\"$cluster\",instance=~\"$instance\"}[5m])",
            "legendFormat": "Connection Errors - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 0.01}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "ðŸ’¾ Security Audit Log",
        "type": "logs",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "{job=\"slurm-exporter\", cluster=~\"$cluster\", instance=~\"$instance\"} |= \"security\" | json",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": true,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 8,
        "title": "ðŸ“ˆ Security Metrics Trend",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "increase(slurm_exporter_security_scan_vulnerabilities_total{cluster=~\"$cluster\",instance=~\"$instance\"}[1h])",
            "legendFormat": "Vulnerabilities Found - {{severity}}"
          },
          {
            "expr": "increase(slurm_exporter_security_scan_runs_total{cluster=~\"$cluster\",instance=~\"$instance\"}[1h])",
            "legendFormat": "Security Scans - {{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "bars",
              "barAlignment": 0,
              "fillOpacity": 80,
              "gradientMode": "hue"
            }
          }
        }
      },
      {
        "id": 9,
        "title": "âš¡ Rate Limiting Status",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(slurm_exporter_rate_limit_exceeded_total{cluster=~\"$cluster\",instance=~\"$instance\"}[5m])",
            "legendFormat": "Rate Limited - {{endpoint}}"
          },
          {
            "expr": "slurm_exporter_active_connections{cluster=~\"$cluster\",instance=~\"$instance\"}",
            "legendFormat": "Active Connections - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "ðŸ” Security Scan Results",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "slurm_exporter_security_scan_last_result{cluster=~\"$cluster\",instance=~\"$instance\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {},
              "renameByName": {
                "instance": "Instance",
                "scan_type": "Scan Type",
                "severity": "Severity",
                "vulnerability_count": "Count",
                "last_scan": "Last Scan"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "auto",
              "align": "left"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "severity"},
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {"options": {"critical": {"text": "ðŸ”´ Critical", "color": "red"}}, "type": "value"},
                    {"options": {"high": {"text": "ðŸŸ  High", "color": "orange"}}, "type": "value"},
                    {"options": {"medium": {"text": "ðŸŸ¡ Medium", "color": "yellow"}}, "type": "value"},
                    {"options": {"low": {"text": "ðŸŸ¢ Low", "color": "green"}}, "type": "value"}
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Security Events",
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Security.*\",cluster=~\"$cluster\"}",
          "iconColor": "red",
          "tagKeys": "alertname,severity",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{summary}}"
        },
        {
          "name": "Security Scans",
          "datasource": "prometheus", 
          "enable": true,
          "expr": "changes(slurm_exporter_security_scan_runs_total{cluster=~\"$cluster\"}[1h]) > 0",
          "iconColor": "blue",
          "titleFormat": "Security Scan",
          "textFormat": "Security scan completed"
        }
      ]
    }
  }
}